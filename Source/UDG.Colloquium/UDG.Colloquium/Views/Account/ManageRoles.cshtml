@model IEnumerable<UDG.Colloquium.BL.ViewModels.RoleNamesViewModel>

@{
    ViewBag.Title = "ManageRoles";
}

<h2>ManageRoles</h2>

<p>
    @Html.ActionLink("Create New Role", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id,roleName=item.RoleName }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id,roleName=item.RoleName })
        </td>
    </tr>
}

</table>
