@model UDG.Colloquium.BL.ViewModels.UserRolesViewModel

@{
    ViewBag.Title = "EditUserRoles";
}

<h2>EditRoles</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" role="form">
        <h4>Current roles asigned to user:@Model.UserName</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @foreach (var role in Model.Roles)
            {
                <label class="checkbox col-md-2">
                    @if (Model.UserRoles.Contains(role))
                    {
                        <input type="checkbox" id="role" value="@role" checked/>@role
                    }
                    else
                    {
                        <input type="checkbox" id="role" value="@role"/>@role
                    }
                </label>
                <div class="col-md-10"></div>
            }
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
